package Teste;

import java.util.Scanner;

public class Calculadora {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner entrada = new Scanner(System.in);
		double res,x,y,z;
		System.out.println("Digite um número");
		x = entrada.nextInt();
		System.out.println("Digite outro número");
		y = entrada.nextInt();
			res = x+y;
			z = res;
		System.out.println("");
		System.out.println("A soma de "+x+" e o "+y+" é igual a "+res);
			res = x-y;
		System.out.println("");
		System.out.println("A subtração de "+x+" e o "+y+" é igual a "+res);
			res = x*y;
		System.out.println("");
		System.out.println("A multiplicação de "+x+" e o "+y+" é igual a "+res);
			if (y == 0) {
				System.out.println("");
				System.out.println("não é possível dividir por 0");
			} 
			else { 
			res = x/y;
		System.out.println("");
		System.out.println("A divisão de "+x+" e o "+y+" é igual a "+res);
		}
			if (z >= 10) {
				System.out.println("");
				System.out.println("o número é maior que 10");
			}
			else {
				System.out.println("");
				System.out.println("o número é menor que 10");
			}
	}

